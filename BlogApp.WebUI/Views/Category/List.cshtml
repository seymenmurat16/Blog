@model IEnumerable<Category>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <h2>Category</h2><br />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Name</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="AddUpdate" asp-route-id="@item.CategoryId">Details</a>
                                    <a class="btn btn-sm bg-danger text-white" data-toggle="confirmation" data-title="Are You Sure?" data-btn-ok-label="Yes" data-btn-ok-class="btn-danger"
                                       data-btn-cancel-label="No" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="glyphicon-alert alert-danger">
                    Blog Eklenmemiş.
                </div>

            }
            <a class="btn btn-success" asp-action="AddUpdate">New Category</a>
        </div>
    </div>
</div>