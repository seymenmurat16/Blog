@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <h2>List</h2><br />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Image</td>
                            <td>Title</td>
                            <td>Date</td>
                            <td>Is Approved</td>
                            <td>Is Home</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.BlogId</td>
                            <td><img src="~/img/@item.Image" width="100" /></td>
                            <td>@item.Title</td>
                            <td>@item.Date</td>
                            <td>
                                @if (@item.isApproved)
                                {
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                }
                            </td>
                            <td>
                                @if (@item.isHome)
                                {
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Update" asp-route-id="@item.BlogId">Update</a>
                                <a class="btn btn-sm bg-danger text-white" data-toggle="confirmation" data-title="Are You Sure?" data-btn-ok-label="Yes" data-btn-ok-class="btn-danger"
                                   data-btn-cancel-label="No" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="glyphicon-alert alert-danger">
                    Blog Eklenmemiş.
                </div>

            }
            <a class="btn btn-success" asp-action="Create">New Blog</a>
        </div>
    </div>
</div>



